<h1>Press Clippings</h1>
<h4>This is where you manage all of the amazing press that YBP gets.</h4>

<table class="admin-report" width="545">
	<thead>
		<tr>
      		<th>Title</th>
      		<th>Teaser</th>
      		<th>URL</th>
					<th>Image</th>
					<th>PDF attached?</th>
					<th></th>
    	</tr>
  	</thead>
	
	<tbody>
    	<% @press_clippings.each do |clipping| %>
		<tr class="<%= cycle('even', 'odd') %>">
			<td>
				<%= clipping.title %>
			</td>
			<td>
				<%= clipping.teaser %>
			</td>
			<td>
				<%= clipping.url %>
			</td>
			<td>
				<%= image_tag clipping.cover(:thumb) %>
			</td>
			<td>
				<%= clipping.pdf ? 'yes' : 'none' %>
			</td>
			<td>
	          <%=link_to t("edit"), edit_object_url(clipping) %> |
	          <%=link_to t("delete"), object_url(clipping), :method => :delete, :confirm => 'Are you sure' %>
	        </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Press Clipping', new_object_url %>
